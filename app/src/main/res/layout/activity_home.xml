<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeActivity"
    >


    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/toolbar"
        android:background="@color/yellow"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        >
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_menu"
            android:background="@color/yellow"
            android:id="@+id/ib_menu"
            />
        <TextView
            android:id="@+id/toolbarTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="EzyFoody"
            android:fontFamily="sans-serif-medium"
            android:gravity="center"
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_marginRight="120dp"
            android:layout_marginLeft="120dp"
            />
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_cart"
            android:background="@color/yellow"
            android:id="@+id/ib_cart"
            android:layout_marginRight="20dp"
            />
    </androidx.appcompat.widget.Toolbar>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="80dp"
        android:id="@+id/header_welcome"
        >
        <TextView
            android:id="@+id/tv_welcome"
            android:background="@drawable/header_home"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Welcome, People"
            android:textColor="@color/white"
            android:textSize="24dp"
            android:layout_marginTop="40dp"
            android:paddingTop="40dp"
            android:paddingBottom="30dp"
            android:textStyle="bold"
            />
    </LinearLayout>


    <RelativeLayout
        android:id="@+id/rl_food"
        android:layout_width="match_parent"
        android:layout_height="95dp"
        android:layout_alignTop="@+id/header_welcome"
        android:layout_marginTop="130dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:clickable="true">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:alpha="0.3"
                android:src="@drawable/bg_menu"
                app:tint="#77000000" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="3dp"
                android:layout_marginBottom="3dp"
                android:src="@drawable/bg_menu" />

            <ImageView
                android:layout_width="95dp"
                android:layout_height="match_parent"
                android:padding="10dp"
                android:src="@drawable/burgerimg" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:gravity="center"
            android:text="Foods"
            android:textAllCaps="true"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:textStyle="bold" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_drinks"
        android:layout_width="match_parent"
        android:layout_height="95dp"
        android:layout_alignTop="@+id/rl_food"
        android:layout_marginTop="130dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:clickable="true">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:alpha="0.3"
            android:src="@drawable/bg_menu"
            app:tint="#77000000" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="3dp"
            android:layout_marginBottom="3dp"
            android:src="@drawable/bg_menu" />

        <ImageView
            android:layout_width="95dp"
            android:layout_height="match_parent"
            android:padding="10dp"
            android:src="@drawable/drinksimg" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:gravity="center"
            android:text="Drinks"
            android:textAllCaps="true"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:textStyle="bold" />
    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/rl_snack"
        android:layout_width="match_parent"
        android:layout_height="95dp"
        android:layout_alignTop="@+id/rl_drinks"
        android:layout_marginTop="130dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:clickable="true">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:alpha="0.3"
            android:src="@drawable/bg_menu"
            app:tint="#77000000" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="3dp"
            android:layout_marginBottom="3dp"
            android:src="@drawable/bg_menu" />

        <ImageView
            android:layout_width="95dp"
            android:layout_height="match_parent"
            android:padding="10dp"
            android:src="@drawable/snackimg" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:gravity="center"
            android:text="Snacks"
            android:textAllCaps="true"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:textStyle="bold" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_topup"
        android:layout_width="match_parent"
        android:layout_height="95dp"
        android:layout_alignTop="@+id/rl_snack"
        android:layout_marginTop="130dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:clickable="true">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:alpha="0.3"
            android:src="@drawable/bg_menu"
            app:tint="#77000000" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="3dp"
            android:layout_marginBottom="3dp"
            android:src="@drawable/bg_menu" />

        <ImageView
            android:layout_width="95dp"
            android:layout_height="match_parent"
            android:padding="10dp"
            android:src="@drawable/cardimg" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:gravity="center"
            android:text="Top Up"
            android:textAllCaps="true"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:textStyle="bold" />
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/yellow"
        android:gravity="center"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14dp"
            android:textColor="@color/white"
            android:text="@string/_2021_by_brian_karnadi_japar"
            android:padding="14dp"
            />

    </LinearLayout>
</RelativeLayout>