<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TopUpActivity">
    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/toolbar"
        android:background="@color/yellow"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        >
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_menu"
            android:background="@color/yellow"
            android:id="@+id/ib_menu"
            />
        <TextView
            android:id="@+id/toolbarTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="EzyFoody"
            android:fontFamily="sans-serif-medium"
            android:gravity="center"
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_marginRight="120dp"
            android:layout_marginLeft="120dp"
            />
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_cart"
            android:background="@color/yellow"
            android:id="@+id/ib_cart"
            android:layout_marginRight="20dp"
            />
    </androidx.appcompat.widget.Toolbar>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="18dp"
        android:layout_marginTop="30dp"
        android:orientation="vertical"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TopUp Menu"
            android:textStyle="bold"
            android:paddingTop="20dp"
            android:textSize="35dp"
            android:textColor="@color/black"
            android:layout_marginBottom="20dp"
            />
        <TextView
            android:id="@+id/tv_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hello, Username"
            android:paddingTop="8dp"
            android:textSize="24dp"
            android:textColor="@color/black"
            android:textStyle="bold"
            />

        <TextView
            android:id="@+id/tv_balanche"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Your Balanche:"
            android:paddingTop="8dp"
            android:textSize="20dp"
            android:textColor="@color/black"
            />

        <TextView
            android:layout_marginTop="22dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Input Nominal:"
            android:textColor="@color/black"
            android:textSize="18dp"/>
        <EditText
            android:id="@+id/et_nominal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number|textVisiblePassword"
            android:digits="0123456789"
            android:hint="Rp. (10000)"
            android:ems="10"
            android:layout_marginTop="5dp"
            android:layout_gravity="center"
            android:background="@drawable/text_login"
            android:padding="12dp"
            />
        <Button
            android:id="@+id/btn_topup"
            android:background="@drawable/round_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:text="TopUp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="15sp"
            android:layout_marginTop="18dp"

            />
    </LinearLayout>
</RelativeLayout>